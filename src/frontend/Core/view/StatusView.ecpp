<%request
    include="Core/controller/StausController.h">
        StatusController  statusController();
</%request>
<%cpp>
    statusController.worker(
        request,
        reply,
        qparam
    );
</%cpp>
<!DOCTYPE HTML>
<html>
<head>
    <title>Status</title>
    <meta charset = "UTF-8" />
    <link
        rel="stylesheet"
        href="/Core/resources/style.css"
        type="text/css"
        media="only screen and (min-width: 800px), only screen and (min-device-width : 800px)" />
</head>
<body>
% // Info-Dialog
% if ( statusController.feedback != "" ) {
            <div class="feedback-box">
                <b><$ statusController.feedback $> </b>
            </div>
% }

<form accept-charset="UTF-8"  method="get">
<!--    <h1>RAUM: <i><%= @roomName %></i></h1>-->

    <br class="clearall">
    <div class="column3">
        <div class="innerbox" >
            <h2>Besprechungsraum</h2>
            <ul>
            <% @workplaces.each do |i| %>
                <% if i["room"] == "besprechungsraum"  %>
                    <% if i["status"] != "off"  %>
                        <li><span class="workplacesid"><%= "#{i["workplaces_id"]}" %>:</span><input class="offair" name="on_off" type="submit" value="ON AIR" /></li>
                    <% else  %>
                        <li><span class="workplacesid"><%= "#{i["workplaces_id"]}" %>:</span><input class="onair" name="on_off" type="submit" value="off" /></li>
                    <% end  %>
                <% end  %>
            <% end  %>
            </ul>
        </div>

        <div class="innerbox" >
            <h2>Support</h2>
            <ul>
            <% @workplaces.each do |i| %>
                <% if i["room"] == "support"  %>
