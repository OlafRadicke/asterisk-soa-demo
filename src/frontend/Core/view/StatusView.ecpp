                    <% else  %>
                        <li><span class="workplacesid"><%= "#{i["workplaces_id"]}" %>:</span><input class="onair" name="on_off" type="submit" value="off" /></li>
                    <% end  %>
                <% end  %>
            <% end  %>
            </ul>
        </div>
        <br>
    </div>

<form accept-charset="UTF-8"  method="get">
</body>
</html>
